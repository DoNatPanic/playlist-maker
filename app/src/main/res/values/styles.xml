<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavBar">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="SimpleButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/black_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="SimpleToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:background">@color/white</item>
        <item name="navigationIconTint">@color/black_light</item>
        <item name="titleTextAppearance">@style/ToolbarTextStyle</item>
    </style>

    <style name="ToolbarTextStyle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SimpleTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/black_light</item>
        <item name="tabIndicatorColor">@color/black_light</item>
        <item name="android:background">@color/white</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:indeterminateTint">@color/blue</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Theme.MyApp.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNeutralButtonStyle">@style/Widget.MyApp.NeutralButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MyApp.PositiveButton</item>
        <item name="dialogCornerRadius">@dimen/rounded_alert_dialog_radius</item>
        <item name="android:background">@color/white</item>

        <!-- Title -->
        <item name="materialAlertDialogTitleTextStyle">
            @style/MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text
        </item>

        <!-- Body -->
        <item name="materialAlertDialogBodyTextStyle">
            @style/BodyTextAppearance.MaterialComponents.Body2
        </item>
    </style>

    <style name="MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextAppearance.MaterialComponents.Body2" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.MyApp.NeutralButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.NeutralButton</item>
    </style>

    <style name="Widget.MyApp.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.PositiveButton</item>
    </style>

    <style name="ThemeOverlay.MyApp.NeutralButton" parent="">
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="ThemeOverlay.MyApp.PositiveButton" parent="">
        <item name="colorPrimary">@color/blue</item>
    </style>

    <!--    Settings activity styles    -->
    <style name="SettingsScreenBgStyle">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingsSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">left|center</item>
        <item name="thumbTint">@color/gray</item>
        <item name="trackTint">@color/gray_light</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    Search activity styles    -->
    <style name="SearchScreenBgStyle">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/card</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableStart">@drawable/et_search</item>
    </style>

    <style name="ClearImageStyle">
        <item name="android:src">@drawable/clear</item>
    </style>

    <style name="TrackNameTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArtistNameTrackTimeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PlaceholderMessageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/search_placeholder_text_padding_horizontal
        </item>
        <item name="android:paddingVertical">@dimen/search_placeholder_text_padding_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="NotFoundImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/search_image_padding_top</item>
        <item name="android:paddingBottom">@dimen/search_image_padding_bottom</item>
        <item name="android:src">@drawable/track_not_found_lm</item>
    </style>

    <style name="WentWrongStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/search_image_padding_top</item>
        <item name="android:paddingBottom">@dimen/search_image_padding_bottom</item>
        <item name="android:src">@drawable/track_wrong_search_lm</item>
    </style>

    <!--    AudioPlayer activity style    -->
    <style name="AudioPlayerScreenBgStyle">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AudioPlayerTrackNameTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AudioPlayerArtistNameTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AudioPlayerTrackTimeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AudioPlayerInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/audio_player_info_text_margin</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AudioPlayerInfoValueTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/audio_player_info_text_margin</item>
        <item name="android:gravity">right</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AddToPlaylistButtonStyle">
        <item name="android:layout_width">@dimen/audio_player_small_button_size</item>
        <item name="android:layout_height">@dimen/audio_player_small_button_size</item>
        <item name="android:elevation">@dimen/audio_player_button_elevation</item>
        <item name="android:background">@drawable/add_added_selector</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="EmptyLikeImageButtonStyle">
        <item name="android:layout_width">@dimen/audio_player_small_button_size</item>
        <item name="android:layout_height">@dimen/audio_player_small_button_size</item>
        <item name="android:elevation">@dimen/audio_player_button_elevation</item>
        <item name="android:background">@drawable/like_unlike</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="PlayImageButtonStyle">
        <item name="android:layout_width">@dimen/audio_player_large_button_size</item>
        <item name="android:layout_height">@dimen/audio_player_large_button_size</item>
        <item name="android:elevation">@dimen/audio_player_button_elevation</item>
        <item name="android:background">@drawable/play_pause</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <!--    Audioplayer activity bottom sheet style    -->
    <style name="PlayerBottomSheetTitleTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/player_bottom_sheet_title_padding</item>
    </style>

    <style name="PlayerBottomSheetBgStyle">
        <item name="android:background">@drawable/rounded_dialog</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--    Playlist small view style    -->
    <style name="PlaylistNameTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlaylistTracksCountTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!--    Favourites fragment style    -->
    <style name="FavouritesFragmentBgStyle">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MediaLibraryTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">19sp</item>
    </style>

    <!--    Create playlist fragment style    -->
    <style name="CreatePlaylistFragmentBgStyle">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CreatePlaylistEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CreatePlaylistTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/black_light</item>
        <item name="boxStrokeColor">@color/outlined_box_selector</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="CreatePlaylistButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontWeight">500</item>
        <item name="android:background">@drawable/create_button_selector</item>
    </style>

    <!--    Playlists fragment style    -->
    <style name="PlaylistsFragmentBgStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--    Playlist element style    -->
    <style name="PlaylistElementTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--    Playlist info fragment style    -->
    <style name="PlaylistInfoFragmentBgStyle">
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="PlaylistInfoNameTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PlaylistInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PlaylistInfoFragmentToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:background">@color/white</item>
        <item name="navigationIconTint">@color/black_light</item>
        <item name="titleTextAppearance">@style/ToolbarTextStyle</item>
    </style>

    <style name="PlaylistInfoBtnsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    Other activities styles    -->
    <style name="DefaultScreenBgStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DefaultScreenTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>

