<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Main activity styles    -->
    <style name="MainScreenHeaderPanelTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_panel_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/main_padding</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MainScreenBgStyle">
        <item name="android:background">@color/blue</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">80dp</item>
        <item name="cornerRadius">@dimen/menu_btn_radius</item>
        <item name="iconTint">@color/black_light</item>
        <item name="iconEndPadding">@dimen/image_padding</item>
    </style>

    <!--    Settings activity styles    -->
    <style name="SettingsScreenBgStyle">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingsScreenHeaderPanelTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsListTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    Search activity styles    -->
    <style name="SearchScreenBgStyle">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--    Other activities styles    -->
    <style name="DefaultScreenBgStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DefaultScreenTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>

