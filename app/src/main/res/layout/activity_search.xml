<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SearchScreenBgStyle"
    tools:context=".SearchActivity">

    <!-- Header Panel-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_panel_height"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/image_padding"
            android:src="@drawable/back" />

        <TextView
            style="@style/SettingsScreenHeaderPanelTextStyle"
            android:text="@string/search_str" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/main_padding"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_search" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/inputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:hint="@string/search_input_hint"
                android:inputType="text"
                android:lines="1" />

            <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>