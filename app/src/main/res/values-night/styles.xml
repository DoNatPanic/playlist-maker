<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SimpleButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="SimpleToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black_light</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <!--    Main activity styles    -->
    <style name="MainScreenBgStyle">
        <item name="android:background">@color/black_light</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--    Settings activity styles    -->
    <style name="SettingsScreenBgStyle">
        <item name="android:background">@color/black_light</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingsSwitch" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">left|center</item>
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/blue_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsTextView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    Search activity styles    -->
    <style name="SearchScreenBgStyle">
        <item name="android:background">@color/black_light</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textColorHint">@color/black_light</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/card_night</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TrackNameTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArtistNameTrackTimeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PlaceholderMessageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/search_placeholder_text_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/search_placeholder_text_padding_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="NotFoundImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/search_image_padding_top</item>
        <item name="android:paddingBottom">@dimen/search_image_padding_bottom</item>
        <item name="android:src">@drawable/track_not_found_dm</item>
    </style>

    <style name="WentWrongStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/search_image_padding_top</item>
        <item name="android:paddingBottom">@dimen/search_image_padding_bottom</item>
        <item name="android:src">@drawable/track_wrong_search_dm</item>
    </style>

    <!--    Other activities styles    -->
    <style name="DefaultScreenBgStyle">
        <item name="android:background">@color/black_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DefaultScreenTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>

